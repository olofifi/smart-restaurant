<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ristorane | <%= title %></title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="album py-5 bg-light">
        <div class="container">
              <%- include('../partials/alerts.ejs') %>
            <div class="row">
                <% items.forEach(function(admin) { %>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow" >
                          <div class="card-body">
                            <p class="card-text">ID: <%= admin.adminId %></p>
                            <p class="card-text">Name: <%= admin.name %></p>
                            <p class="card-text">Email: <%= admin.email %></p>
                            <p class="card-text">Phone: <%= admin.phone %></p>
                            <div class="d-flex justify-content-between align-items-center">
                              <div class="btn-group">
                                <button type="button" class="btn-danger"><a href='/adminpanel/admins/delete/<%= admin._id %>' style="color: white">Delete</a> </button>
                                <button type="button" class="btn-warning"><a href='/adminpanel/admins/edit/<%= admin._id %>' style="color: black">Edit</a></button>
                              </div>
                              <small class="text-muted">Since: <%= admin.date %></small>
                            </div>
                          </div>
                        </div>
                      </div>
                <% }) %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                      <div class="card-body">
                        <p class="card-text">Add new product to the menu.</p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <button type="button" class="btn-success"><a href='/adminpanel/admins/addadmin' style="color: white">Add new administrator</a> </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>

        </div>
</div>
<%- include('../partials/footer.ejs') %>
</body>
</html>